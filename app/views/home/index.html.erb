<h1>Your todo list</h1>

<h2>Add a new todo</h2>

<form action="/insert_todo" method="post">
  <div>
    <label for="content_box">Describe a task:</label>
    <input type="text" id="content_box" name="query_content">
    <input type="hidden" name="section" value="next_up">
  </div>
  <button type="submit">Add to Next Up</button>
</form>  

<div class="next_up" style="color: darkorange;">
  <h2>Next up</h2>
  <% if @next_up_todo %>
    <ul>
      <li><%= @next_up_todo.content %></li>
      <a href="/delete_todo/<%= @next_up_todo.id %>">Delete</a> 
        <%= time_ago_in_words(@next_up_todo.created_at) %> ago
    </ul>
  <% else %>
    <p>No items in Next Up</p>
  <% end %>
</div>

<div class="in_progress" style="color: darkgreen;">
  <h2>In Progress</h2>
  <% if @in_progress_todo %>
    <ul>
      <li><%= @in_progress_todo.content %></li>
      <a href="/delete_todo/<%= @in_progress_todo.id %>">Delete</a> 
        <%= time_ago_in_words(@in_progress_todo.created_at) %> ago
    </ul>
  <% else %>
    <p>No items in Progress</p>
  <% end %>
</div>

<div class="done" style="color: grey;">
  <h2>Done</h2>
  <% if @done_todo %>
    <ul>
      <li><%= @done_todo.content %></li>
      <a href="/delete_todo/<%= @done_todo.id %>">Delete</a> 
        <%= time_ago_in_words(@done_todo.created_at) %> ago
    </ul>
  <% else %>
    <p>No items in Done</p>
  <% end %>
</div>
